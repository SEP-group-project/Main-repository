import torch
from torch.utils.data import DataLoader
import torch.nn as nn
from data_import import test_images

num_classes = 6
idx_to_emotion = {0:"surprise",1:"fear",2:"disgust",3:"happiness",4:"sadness",5:"anger"}
device = torch.device("cuda" if torch.cuda.is_available() else "cpu")
loader = DataLoader(test_images, batch_size=64, shuffle=False)

class EmotionCNN(nn.Module):
    def __init__(self, num_classes):
        super().__init__()

        def block(in_ch, out_ch):
            return nn.Sequential(
                nn.Conv2d(in_ch, out_ch, 3, padding=1, bias=False),
                nn.BatchNorm2d(out_ch),
                nn.ReLU(inplace=True),
                nn.Conv2d(out_ch, out_ch, 3, padding=1, bias=False),
                nn.BatchNorm2d(out_ch),
                nn.ReLU(inplace=True),
                nn.MaxPool2d(2),
                nn.Dropout2d(0.15),
            )

        self.features = nn.Sequential(
            block(3, 32),
            block(32, 64),
            block(64, 128),
            block(128, 256),
        )

        self.pool = nn.AdaptiveAvgPool2d(1)

        self.classifier = nn.Sequential(
            nn.Flatten(),
            nn.Linear(256, 256),
            nn.ReLU(inplace=True),
            nn.Dropout(0.5),
            nn.Linear(256, num_classes),
        )

    def forward(self, x):
        x = self.features(x)
        x = self.pool(x)
        return self.classifier(x)




model = EmotionCNN(num_classes).to(device)
model.load_state_dict(torch.load("best_model_cosine.pt", map_location=device))
model.eval()



all_preds=[]
with torch.no_grad():
    for x,_ in loader:
        all_preds.extend(model(x.to(device)).argmax(1).cpu().tolist())

total=len(all_preds)
for cls in range(num_classes):
    print(f"{idx_to_emotion[cls]}: {all_preds.count(cls)/total*100:.2f}%")
